{
  "manifest_version": 3,
  "name": "Universal Currency Converter",
  "version": "1.0",
  "description": "Hover over any price to convert it to your preferred currency",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.exchangerate-api.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Currency Converter Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
